= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-signin' }) do |f|
  %h2.form-signin-heading Please sign in
  = f.email_field :email, :autofocus => true, class: 'form-control', autofocus: "", placeholder: "Email address", type: "text"
  = f.password_field :password, class: 'form-control', placeholder: "Password", type: "password"
  - if devise_mapping.rememberable?
    %label.checkbox
      = f.check_box :remember_me, type: "checkbox", value: "remember-me"
      Remember me
  %div= f.submit "Sign in", class: 'btn btn-lg btn-primary btn-block'
= render "devise/shared/links"
